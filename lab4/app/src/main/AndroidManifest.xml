<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jonhassall.lab4_notifications" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/bike3"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NotificationReceiverActivity"
            android:label="@string/title_activity_notification_receiver"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jonhassall.lab4_notifications.MainActivity" />
        </activity>
        <activity
            android:name=".DeleteNotificationReceiverActivity"
            android:label="@string/title_activity_delete_notification_receiver"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.jonhassall.lab4_notifications.MainActivity" />
        </activity>
    </application>

</manifest>
